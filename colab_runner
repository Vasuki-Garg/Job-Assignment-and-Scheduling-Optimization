# colab/run_colab.py
# Usage in Colab: run this whole file in a cell (or copy its contents into a cell).

import os
import sys
import subprocess

def pip_install():
    subprocess.check_call([sys.executable, "-m", "pip", "install", "-q", "gurobipy", "pandas", "openpyxl"])

pip_install()

from google.colab import files
uploaded = files.upload()  # upload Process_Dataset.xlsx
excel_name = next(iter(uploaded.keys()))

# !git clone <YOUR_REPO_URL>
# %cd job-assignment-gurobi

# Run the solver script
!python src/job_assignment_with_learning.py --data "{excel_name}" --sheet "Part 1"
